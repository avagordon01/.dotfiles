[bar/main]
background = #222
foreground = #eee
font-0 = Hack:size=8
dpi = 192
modules-left = menu
modules-right = wlan eth0 eth1 backlight volume battery date
separator = "   "
cursor-click = pointer
cursor-scroll = ns-resize
wm-restack = bspwm
enable-ipc = true

[settings]
screenchange-reload = true

[module/bspwm]
type = internal/bspwm
pin-workspaces = true

[module/menu]
type = custom/menu
label-open = menu
label-close = menu
label-separator = " "
menu-0-0 = terminal
menu-0-0-exec = echo $(alacritty) &
menu-0-1 = browser
menu-0-1-exec = echo $(firefox) &
menu-0-2 = poweroff
menu-0-2-exec = systemctl poweroff
menu-0-3 = reboot
menu-0-3-exec = systemctl reboot
menu-0-4 = suspend
menu-0-4-exec = systemctl suspend

[module/mpd]
type = internal/mpd
host = "127.0.0.1"
port = 6600

format-online = <label-song> <label-time> <icon-prev> <toggle> <icon-next>
label-song = %title%
label-time = %elapsed:5%/%total:5%

icon-play = play
icon-pause = pause
icon-prev = prev
icon-next = next

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label = brightness %percentage:3%%
enable-scroll = true

[module/eth0]
type = internal/network
interface = enp0s31f6
label-connected = eth

[module/eth1]
type = internal/network
interface = enp58s0u1u1
label-connected = eth

[module/wlan]
type = internal/network
interface = wlan0
label-connected = wifi %essid%

[module/date]
type = internal/date
interval = 5
label = %time%
time = %H:%M

[module/volume]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = volume %percentage:3%%
label-muted = muted  %percentage:3%%
interval = 4

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = battery %percentage:3%%
label-discharging = battery %percentage:3%%
label-full = battery %percentage:3%%
