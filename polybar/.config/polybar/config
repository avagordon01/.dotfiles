[bar/main]
height = 20
background = #222
foreground = #eee
font-0 = GoHu GoHuFont:pixelsize=14
modules-left = menu
modules-center = date
modules-right = wlan eth xbacklight volume battery
separator = " | "
cursor-click = pointer
cursor-scroll = ns-resize
wm-restack = bspwm

[module/menu]
type = custom/menu
label-open = "menu"
label-close = "menu"
label-separator = " "
menu-0-0 = terminal
menu-0-0-exec = echo $(alacritty -e tmux) &
menu-0-1 = browser
menu-0-1-exec = echo $(firefox) &
menu-0-2 = poweroff
menu-0-2-exec = systemctl poweroff
menu-0-3 = reboot
menu-0-3-exec = systemctl reboot
menu-0-4 = suspend
menu-0-4-exec = systemctl suspend

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = brightness %percentage%%
enable-scroll = true

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected = <label-connected>
label-connected = signal %signal%%
format-disconnected =

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
format-connected = <label-connected>
label-connected = eth %local_ip%
format-disconnected =

[module/date]
type = internal/date
interval = 5
time = %H:%M
label = %time%

[module/volume]
type = internal/volume
format-volume = <label-volume>
label-volume = volume %percentage%%
label-muted = vol mute

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = charging <label-charging>
format-discharging = discharging <label-discharging>
format-full = charged
