[bar/main]
height = 16
background = #222
foreground = #eee
font-0 = GoHu GoHuFont:pixelsize=12
font-1 = Material Icons:pixelsize=8;1
modules-left = menu
modules-center = bspwm
modules-right = mpd wlan eth xbacklight volume battery date
separator = "  "
cursor-click = pointer
cursor-scroll = ns-resize
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

[module/menu]
type = custom/menu
label-open = "menu"
label-close = "menu"
label-separator = " "
menu-0-0 = terminal
menu-0-0-exec = echo $(alacritty -e tmux) &
menu-0-1 = browser
menu-0-1-exec = echo $(firefox) &
menu-0-2 = poweroff
menu-0-2-exec = systemctl poweroff
menu-0-3 = reboot
menu-0-3-exec = systemctl reboot
menu-0-4 = suspend
menu-0-4-exec = systemctl suspend

[module/mpd]
type = internal/mpd
host = "127.0.0.1"
port = 6600

format-online = <label-song> <label-time> <icon-prev><toggle><icon-next>
label-song = %title%
label-time = %elapsed:5%/%total:5%

icon-play = ""
icon-pause = ""
icon-prev = ""
icon-next = ""

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = %percentage:3%%
enable-scroll = true

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 5.0
format-connected = <label-connected>
label-connected = %linkspeed:3%%
format-disconnected =

[module/wlan]
inherit = module/eth
interface = wlp2s0
label-connected = %signal:3%%

[module/date]
type = internal/date
interval = 5
label = %time%
time = %H:%M

[module/volume]
type = internal/volume
format-volume = <label-volume>
label-volume = %percentage:3%%
label-muted = %percentage:3%%


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = %percentage:3%%
label-discharging = %percentage:3%%
label-full = %percentage:3%%
